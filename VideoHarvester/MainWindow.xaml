<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="VideoHarvester.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VideoHarvester" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10" VerticalAlignment="Center">
            <TextBlock Text="Enter Video ID:" FontSize="14" Margin="0,0,0,5" />
            <TextBox x:Name="VideoIdTextBox" Width="250" Height="30" FontSize="14" />

            <Button x:Name="AddToQueueButton" Content="Add to Queue" Width="250" Height="40" Margin="0,10,0,0" Click="AddToQueue_Click" />

            <TextBlock Text="Download Queue:" FontSize="14" Margin="0,15,0,5" />
            <ListBox x:Name="DownloadQueueListBox" Width="350" Height="100" />
        </StackPanel>
    </Grid>
</Window>
